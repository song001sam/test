<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.unissoft.test.mapper.XSMXMapper">
    <select id="selectList" resultType="java.util.HashMap">
        select
        <foreach collection="colNames" item="colName" separator=",">
            ${colName}
        </foreach>
        from ${tableName}
    </select>
    <select id="selectColName" resultType="java.util.HashMap">
        SELECT column_name FROM information_schema.columns WHERE table_schema= 'test' AND table_name= #{tableName};

    </select>
</mapper>